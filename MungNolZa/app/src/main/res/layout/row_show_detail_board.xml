<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerCarouselShowDetailBoard"
    android:layout_width="@dimen/carousel_container_width_small"
    android:layout_height="@dimen/carousel_container_height_large"
    android:layout_marginStart="@dimen/carousel_container_margin_start"
    android:layout_marginEnd="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/carousel_container_padding"
    app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge">

    <ImageView
        android:id="@+id/imageViewCarouselShowDetailBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

</com.google.android.material.carousel.MaskableFrameLayout>