<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:transitionGroup="true"
    tools:context=".ui.petsitter_reservation_list.fragment.PetsitterReservationListOngoingFragment">

    <TextView
        android:id="@+id/textViewPetsitterReservationListOngoingCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="총 0건" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPetsitterReservationListOngoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</FrameLayout>