<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding">

        <TextView
            android:id="@+id/textViewTitleFreeBoardRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="@dimen/board_text_title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPhotoFreeBoardRow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNickNameFreeBoardRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/board_text_margin_start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="작성자"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewLikeFreeBoardRow"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentFreeBoardRow"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageViewPhotoFreeBoardRow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_dog" />

        <TextView
            android:id="@+id/textViewDateFreeBoardRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/board_text_margin_start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="날짜"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNickNameFreeBoardRow"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentFreeBoardRow"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewContentFreeBoardRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/board_content_margin_top"
            android:fontFamily="sans-serif"
            android:text="내용"
            android:textSize="@dimen/board_text_content_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleFreeBoardRow" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/icon_thumb_up_width"
            android:layout_height="@dimen/icon_thumb_up_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentFreeBoardRow"
            app:srcCompat="@drawable/ic_thumb_up_24px" />

        <TextView
            android:id="@+id/textViewLikeFreeBoardRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/board_text_like_margin_start"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textViewContentFreeBoardRow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>