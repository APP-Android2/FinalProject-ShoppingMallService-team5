<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/shared_common_margin"
        android:background="@drawable/top_round_container"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/shared_layout_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/shared_layout_padding">

            <ImageView
                android:id="@+id/pet_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner_border"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae_bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/pet_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/appointment_pet_select_item_margin_top"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/appointment_pet_select_item_margin_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pet_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_regular" />

                    <TextView
                        android:id="@+id/pet_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_regular" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/shared_layout_padding">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/binggrae_regular"
                android:textStyle="bold"
                android:text="@string/time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:drawableStartCompat="@drawable/ic_pets_foot_24px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shared_common_margin_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_60_minutes"
                        android:background="@drawable/select_time_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/shared_common_margin_10"
                        android:layout_marginBottom="@dimen/shared_common_margin_10"
                        android:text="@string/all_day" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_30_minutes"
                        android:background="@drawable/select_time_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/shared_common_margin_10"
                        android:layout_marginBottom="@dimen/shared_common_margin_10"
                        android:text="@string/a_half_hour" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_1_hour"
                        android:background="@drawable/select_time_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/shared_common_margin_10"
                        android:layout_marginBottom="@dimen/shared_common_margin_10"
                        android:text="@string/one_hour" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_2_hour"
                        android:background="@drawable/select_time_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/shared_common_margin_10"
                        android:layout_marginBottom="@dimen/shared_common_margin_10"
                        android:text="@string/two_hour" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_all_day"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10,0000"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/shared_common_margin_10"
                        android:text="18000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="28000"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="38000"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="@dimen/shared_button_width"
                android:layout_height="@dimen/shared_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/binggrae_regular"
                android:gravity="center"
                android:text="@string/next"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        style="@style/Widget.Material3.Button.TonalButton"
        android:id="@+id/btn_back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_arrow_back_white_24px"/>
</FrameLayout>

