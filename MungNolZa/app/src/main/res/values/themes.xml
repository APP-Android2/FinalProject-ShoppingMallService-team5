<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MungNolZa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 상단 상태바 색상 -->
        <item name="colorPrimaryDark">@color/white</item>
        <!-- 상단 상태바에 나타나는 정보를 보여주도록 설정한다. 상단 상태바의 색상이 밝은 색인지 여부를 설정한다 -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 초기로딩시 검은 화면 없애기-->
        <!--  이 설정은 preview window를 보이게 할지 안할지 설정 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 이 설정은 window를 투명으로 설정할지 말지에 대한 설정 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- BottomSheet Design -->
    <style name="Theme.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:backgroundTint">@color/chat_room_color</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="Theme.MungNolZa" parent="Base.Theme.MungNolZa" />

    <!-- Toolbar 용 테마. Toolbar 마다 지정해준다. -->
    <style name="Theme.MungNolZa.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CustomPositiveDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>